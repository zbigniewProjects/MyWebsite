@page
@using RazorPortfolio.Utils
@model RazorPortfolio.Pages.ProjectsModel
@{
    ViewData["Title"] = "zbigniew - Projects";
}
<head>
    <link rel="stylesheet" href="~/css/projects.css" />
</head>

<div class="container">
    <h1 class="text-center">My projects</h1>
    <br>

    @for (int i = 0; i < Model.Projects.Count; i++)
    {
        var product = Model.Projects[i];
        <div>
            <div class="project-title">
                <h2 class="product-name">@product.Name</h2>
            </div>
            <div class="projectItem">
                
                <div class="projectItemAura">
                    @if (product.TechStack != null && product.TechStack.Length > 0)
                    {
                        <div class="project-description">
                        @Html.Raw(Render.RenderTechnologies(product))
                        </div>
                    }
                    <p class="project-description">
                        @Html.Raw(product.Description)
                    </p>
                </div>
                <img src="@product.ImageUrl" alt="@product.Name" class="projectImage" />
            </div>
            <a href=@Model.Projects[i].PageUrl class="button-learnMore">Learn more</a>
        </div>
    }
</div>
